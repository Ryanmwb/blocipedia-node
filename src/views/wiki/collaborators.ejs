<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Collaborators</h1>
        <ul class="list-group">
            <% if(wiki.userId == currentUser.id) { %>
                <a href="/wikis/<%= wiki.id %>/collaborator/new" class="btn btn-primary">Add a Collaborator</a>
                <br>
                <br>
            <% } %>
            
            <% collaborators.forEach((collaborator) => { %>
                <li class="list-group-item">
                    <h5>User Id: <%= collaborator.userId %></h5>
                </li>
                <% if(wiki.userId == currentUser.id) { %>
                    <form style="display:initial" action="/wikis/<%= wiki.id %>/collaborators/<%= collaborator.id %>/delete" method="post">
                        <button type="submit" class="btn btn-danger">Remove Collaborator</button>
                    </form>
                    <br>
                <% } %>
            <% }) %>
            
        </ul>
    </main>
  </body>
</html>